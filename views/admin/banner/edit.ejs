<%- include('../../layout/header') %>
<div class="container-fluid">
  <h1>แก้ไขแบนเนอร์ - <%= banner.title %></h1>
  <div class="card">
    <div class="card-header">
      กรุณากรอกข้อมูลให้ครบถ้วน
    </div>
    <div class="card-body">
      <form
        action="/admin/banner/update/<%= banner.id %>"
        enctype="multipart/form-data"
        method="POST"
        role="form"
      >
        <div class="form-group">
          <label for="selectStatus">สถานะ</label>
          <select name="status" id="selectStatus" class="form-control">
            <option
              selected="<%= banner.status == 0 ? true : false %>"
              value="0"
              >ปิดใช้งาน</option
            >
            <option
              selected="<%= banner.status == 1 ? true : false %>"
              value="1"
              >เปิดใช้งาน</option
            >
          </select>
        </div>
        <div class="form-group">
          <label for="inputTitle">หัวข้อแบนเนอร์</label>
          <input
            type="text"
            name="title"
            id="inputTitle"
            required
            minlength="3"
            value="<%= banner.title %>"
            placeholder="กรอกหัวข้อ"
            class="form-control"
          />
        </div>
        <div class="form-group">
          <label for="inputLink">ลิงค์ * ถ้าไม่มีให้เว้นว่างไว้ </label>
          <input
            type="text"
            name="link"
            id="inputLink"
            value="<%= banner.link %>"
            placeholder="กรอกลิงค์"
            class="form-control"
          />
        </div>
        <div class="form-group">
          <label for="inputFile"
            >ไฟล์รูปภาพ * รูปภาพแบนเนอร์ขนาดที่เหมาะสมคือ 1200x400 px
            เว้นว่างไว้หากไม่ต้องการเปลี่ยน
          </label>
          <br />
          <img
            class="mb-3"
            src="<%= banner.path %>"
            width="250"
            alt="<%= banner.title %>"
          />
          <br />
          <input
            type="file"
            name="image"
            id="inputFile"
            accept="image/*"
          />
        </div>
        <button class="btn btn-primary">
          <i class="fa fa-save"></i> บันทึก
        </button>
      </form>
    </div>
  </div>
</div>
<%- include('../../layout/footer') %> <%- include('../../layout/end') %>
